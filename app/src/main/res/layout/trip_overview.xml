<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/trip_overview_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/trip_overview_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".TripOverviewActivity">

        <!-- The ActionBar displayed at the top -->
        <include
            layout="@layout/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <com.sanderp.bartrider.view.AutoResizeTextView
                android:id="@+id/trip_header"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="center"
                android:maxLines="1"
                android:text="@string/empty_field"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:text="@string/sample_trip" />

            <!--<ImageView-->
                <!--android:id="@+id/trip_leg_drawable"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="25dp"-->
                <!--android:layout_below="@id/trip_header"-->
                <!--android:layout_marginTop="8dp"-->
                <!--android:src="@drawable/station_segment" />-->

            <ListView
                android:id="@+id/trip_list_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/trip_header"
                android:choiceMode="singleChoice"
                tools:listitem="@layout/trip_overview_list_item" />

            <TextView
                android:id="@+id/empty_list_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/empty_list_view"
                android:textSize="18sp" />

            <ProgressBar
                android:id="@+id/next_train_progress"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_below="@+id/trip_list_view"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:max="1200"
                android:progress="1200"
                android:progressDrawable="@drawable/circular_progress"
                style="?android:attr/progressBarStyleHorizontal" />

            <TextView
                android:id="@+id/next_train"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/next_train_progress"
                android:layout_alignTop="@id/next_train_progress"
                android:layout_alignEnd="@id/next_train_progress"
                android:layout_alignBottom="@id/next_train_progress"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:text="@string/empty_field"
                android:textSize="42sp"
                tools:text="@string/sample_time_until_departures" />

            <TextView
                android:id="@+id/next_train_window"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/next_train_progress"
                android:layout_alignTop="@id/next_train_progress"
                android:layout_alignEnd="@id/next_train_progress"
                android:layout_alignBottom="@id/next_train_progress"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:layout_marginTop="52dp"
                android:text="@string/time_window"
                android:textSize="16sp"
                tools:text="@string/time_window" />

            <TextView
                android:id="@+id/advisory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/next_train_progress"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:text="@string/empty_field"
                tools:text="@string/sample_advisory" />

        </RelativeLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_margin="16dp"
            android:src="@drawable/ic_add_24dp"
            android:tint="@color/material_light" />

    </RelativeLayout>

    <fragment
        android:id="@+id/trip_drawer_fragment"
        android:name="com.sanderp.bartrider.TripDrawerFragment"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        tools:layout="@layout/trip_drawer_fragment" />

</android.support.v4.widget.DrawerLayout>