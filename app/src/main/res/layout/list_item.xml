<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/destinationTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sample_time"
        android:layout_centerVertical="true"
        android:layout_alignBaseline="@+id/originTime"
        android:layout_alignBottom="@+id/originTime"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/fare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sample_fare"
        android:layout_below="@+id/destinationTime"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/originTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sample_time"
        android:fontFamily="sans-serif"
        android:textSize="24sp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>