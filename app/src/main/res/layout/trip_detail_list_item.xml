<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/trip_leg_dest_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:textSize="12sp"
        tools:text="@string/sample_dest_abbr" />

    <TextView
        android:id="@+id/trip_leg_dest_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/trip_leg_dest_name"
        android:textSize="24sp"
        tools:text="@string/sample_time" />

    <TextView
        android:id="@+id/trip_leg_orig_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="12sp"
        tools:text="@string/sample_orig_abbr" />

    <TextView
        android:id="@+id/trip_leg_orig_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/trip_leg_orig_name"
        android:textSize="24sp"
        tools:text="@string/sample_time" />

</RelativeLayout>