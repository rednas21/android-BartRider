<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">

    <TextView
        android:id="@+id/trip_leg_orig_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/trip_leg_orig_time"
        android:textSize="12sp"
        tools:text="@string/sample_orig_abbr" />

    <TextView
        android:id="@+id/trip_leg_orig_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:minWidth="100dp"
        android:textSize="20sp"
        tools:text="@string/sample_time" />

    <TextView
        android:id="@+id/trip_leg_dest_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/trip_leg_dest_time"
        android:textSize="12sp"
        tools:text="@string/sample_dest_abbr" />

    <TextView
        android:id="@+id/trip_leg_dest_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:gravity="end"
        android:minWidth="100dp"
        android:textSize="20sp"
        tools:text="@string/sample_time" />

    <com.sanderp.bartrider.view.TrainRouteView
        android:id="@+id/train_route"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/trip_leg_orig_time"
        android:layout_toStartOf="@+id/trip_leg_dest_time"
        android:layout_centerInParent="true" />

</RelativeLayout>